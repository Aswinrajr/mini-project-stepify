<% if(userData){%>
	<%- include("./layouts/userheader.ejs") %>
	<%}else{%>
		<%- include("./layouts/header.ejs") %>
	   <%}%>

	
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="p-5 row d-flex">
                    <% proData.image.forEach(data=>{%>
                    <div class="col-2 single-prd-item">
                        <img class="img-fluid" src="../../public/uploads/<%= data %> " onclick="changeImage('<%=data%>')" alt="">
                    </div>
                    <% })%>
                    <!-- <div class="single-prd-item">
                        <img class="img-fluid" src="img/category/s-p1.jpg" alt="">
                    </div>
                    <div class="single-prd-item">
                        <img class="img-fluid" src="img/category/s-p1.jpg" alt="">
                    </div> -->
                </div>
               
                <div class="single-prd-item">
                    <img class="img-fluid"  src="../../public/uploads/<%=proData.image[0] %> " id="zoom-image" alt="">
                </div>
            </div>
      
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3><%= proData.categoryName %></h3>
                    <h2>$<%= proData.price %></h2>
                    <ul class="list">
                        <li><a class="active" href="#"><span>For</span> :<%= proData.person %></a></li>
                        <li><a href="#"><span>Size</span> :<%=proData.size %></a></li>
                    </ul>
                    <p><%=proData.description %></p>

                    
                    <div class="card_area d-flex align-items-center">
                        <a href="#" class="primary-btn border-0" >Add to Cart</a>
                        <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jquery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Zoom -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>
<script>
    
    $(document).ready(function() {
  $('#zoom-image').elevateZoom();
});

function changeImage(image){
    const proImage = document.getElementById("zoom-image")
    proImage.src=`../../public/uploads/${image}`
}
</script>


