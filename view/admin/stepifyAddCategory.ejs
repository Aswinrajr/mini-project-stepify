<%- include("./layouts/header.ejs") %>

<div class="container px-6 mx-auto grid" style="width: 50%; margin-top: 15%; font-size: 1.2rem;">
    <form action="/admin/dashboard/category" method="post">
        <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800 ">
            <div class="text-center font-semibold">
                <!-- Increase the font size using inline style -->
                <h1 class="text-3xl text-black">
                    Add Category
                </h1>
            </div>
            <label class="block mt-4 text-sm">
                <span class="text-gray-700 dark:text-gray-400">
                    Category Name
                </span>
                <input type="categoryName"
                    class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                    id="categoryName" name="categoryName" placeholder="Enter your categoryName" required="">
            </label>
            <label class="block mt-4 text-sm">
                <span class="text-gray-700 dark:text-gray-400">
                    Brand
                </span>
                <input type="brand"
                    class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                    id="brand" name="brand" placeholder="Enter your brand" required="">
            </label>
            <button type="submit" class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">Add Category</button>
        </div>
    </form>
</div>



<%- include("./layouts/footer.ejs") %>