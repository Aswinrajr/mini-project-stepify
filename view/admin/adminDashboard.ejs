          <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Charts
          </h2>
          <div class="grid gap-6 mb-8 md:grid-cols-2">
            <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
              <select id="dateRange">
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
              </select>





              <select id="orderStatus">
                <option value="confirmed">Confirmed</option>
                <option value="Out for Delivery">Out for Delivery</option>
                <option value="Delivered">Delivered</option>
                <option value="Shipped">Shipped</option>
                <option value="Cancel">Cancel</option>
                <option value="Return">Return</option>
              </select>



              <canvas id="orderStatusChart"></canvas>

            </div>
            <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
              <li class="bg-blue-500 hover:bg-blue-700 text-white  py-2 px-4 rounded">
                Download Sales Report
            </li>

              <form action="/admin/sales-report" method="post">
                <div id="selectedDates"
                  style="display: flex; align-items: center; gap: 10px; margin-bottom: 20px;">
                  <div class="from mt-4" style="font-weight: bold;">
                    <label for="dateFrom">From</label>
                    <input type="date" name="dateFrom" id="dateFrom"
                      style="padding: 5px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;" required>
                  </div>
                  <div class="to mt-4" style="font-weight: bold;">
                    <label for="dateTo">To</label>
                    <input type="date" name="dateTo" id="dateTo"
                      style="padding: 5px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;" required>
                  </div>
                  <div class="mt-4">
                    <button type="submit" class="genric-btn primary small mt-3"
                  style="display: block; padding: 8px 15px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 14px; cursor: pointer;">Apply</button>
                  </div>
                  
                </div>


              </form>

            </div>
          </div>

      </div>
      </main>
    </div>
    </div>
  </body>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>




  <script>
    const dateRangeSelect = document.getElementById('dateRange');
    const orderStatusSelect = document.getElementById('orderStatus');
    const chartCanvas = document.getElementById('orderStatusChart');




    function downloadSalesReport() {
      document.getElementById("selectedDates").style.display = "block"
    };

   
    
  
    const updateChart = () => {
      const selectedDateRange = dateRangeSelect.value;
      const selectedStatus = orderStatusSelect.value;
      console.log("selectedDateRange", selectedDateRange)
      console.log("selectedStatus", selectedStatus)


      axios.get(`/admin/chart?dateRange=${selectedDateRange}&status=${selectedStatus}`)
        .then((response) => {
          console.log("Response in axios: ", response)
          const chartData = response.data;
          console.log("chartData in respose: ", chartData)

        
          createOrUpdateChart(chartCanvas, chartData);
        })
        .catch((error) => {
          console.error('Error fetching chart data:', error);
        });
    };

    const createOrUpdateChart = (canvas, data) => {
      let myChart = new Chart(canvas, {
        type: 'bar',
        data: data,
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    };

    
    updateChart();


    dateRangeSelect.addEventListener('change', updateChart);
    orderStatusSelect.addEventListener('change', updateChart);
  </script>


