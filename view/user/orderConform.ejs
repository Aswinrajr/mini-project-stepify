<%- include("./layouts/userheader.ejs") %>

<style>
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #5cb85c;
        --text-color: #333333;
        --background-color: #f7f9fc;
        --border-color: #e1e8ed;
    }

    body {
        background-color: var(--background-color);
    }

    .order-confirmation {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 40px 30px;
        text-align: center;
        max-width: 800px;
        margin: 60px auto;
    }

    .confirmation-icon {
        color: var(--secondary-color);
        font-size: 72px;
        margin-bottom: 30px;
    }

    .title_confirmation {
        color: var(--text-color);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .order-number {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 30px;
        font-weight: 500;
    }

    .btn-continue-shopping {
        background-color: var(--primary-color);
        color: #fff;
        padding: 14px 28px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-continue-shopping:hover {
        background-color: #3a7bd5;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(74, 144, 226, 0.3);
    }

    .order-summary {
        background-color: #f8f9fa;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 30px;
        margin-top: 40px;
        text-align: left;
    }

    .order-summary h4 {
        color: var(--text-color);
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 12px;
        margin-bottom: 25px;
        font-size: 22px;
        font-weight: 600;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        font-size: 16px;
    }

    .summary-item span:first-child {
        color: #6c757d;
        font-weight: 500;
    }

    .summary-item span:last-child {
        color: var(--text-color);
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .order-confirmation {
            margin: 30px 15px;
            padding: 30px 20px;
        }

        .title_confirmation {
            font-size: 24px;
        }

        .order-summary {
            padding: 20px;
        }
    }
</style>

<section class="order_details section_gap mt-5">
    <div class="container mt-3">
        <div class="order-confirmation">
            <i class="fas fa-check-circle confirmation-icon"></i>
            <h3 class="title_confirmation">Thank you! Your order has been confirmed.</h3>
            <p class="order-number">Order number: <%= newOrder._id %></p>
            <a href="/" class="btn-continue-shopping">Continue Shopping</a>
            
            <div class="order-summary">
                <h4>Order Summary</h4>
                <div class="summary-item">
                    <span>Order Date:</span>
                    <span><%= expectedDeliveryDate %></span>
                </div>
                <div class="summary-item">
                    <span>Total Amount:</span>
                    <span>$<%= totalPrice %></span>
                </div>
                <div class="summary-item">
                    <span>Payment Method:</span>
                    <span><%= paymentMethod %></span>
                </div>
                <div class="summary-item">
                    <span>Delivery Address:</span>
                    <span><%= deliveryAddress %></span>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("./layouts/footer.ejs") %>