<%- include("./layouts/header.ejs") %>



<section class="login_box_area section_gap ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img mt-5">
                    <img class="img-fluid" src="../../public/assetsfile/img/p5.jpg" alt="">
                    <div class="hover">
                        <h4>New to our website?</h4>
                        <p>Continue shopping with us by choosing your perfect footwares</p>
                        <a class="primary-btn" href="/signup">Create an Account</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mt-5">
                <div class="login_form_inner">
                    <h3>Log in to enter</h3>
                    <div id="message">
                        <% if(msg=="Please Login") {%>
                          
                            <div style=" width: 100px;position: fixed; top: 150px; right: 20px; background-color: #0ff30b; color: #040404; padding: 10px; border-radius: 4px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06);">
                                <p><%= msg %></p>
                            </div>
                        <%}else if(msg=="Please enter the Registered password"){%>
                            <div style="position: fixed; top: 150px; right: 20px; background-color: #f8e402; color: #000000; padding: 10px; border-radius: 4px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06);">
                                <p><%= msg %></p>
                            </div>

                            <%}else if(msg=="You are Blocked please contact admin"){%>
                                <div style="position: fixed; top: 150px; right: 20px; background-color: #e53e3e; color: #fff; padding: 10px; border-radius: 4px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06);">
                                <p><%= msg %></p>
                            </div>

                                <%}else if(msg=="User is not registered please sign up"){%>
                                    <div style="position: fixed; top: 150px; right: 20px; background-color: #f46f02; color: #080808; padding: 10px; border-radius: 4px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06);">
                                        <p><%= msg %></p>
                                    </div>

                                    <%}%>
                        
                      </div>
                    <form class="row login_form" action="/login" method="post" >
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                        </div>
                        
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Log In</button>
                            <a href="/enter-mobile-number">Forgot Password?</a>
                            <!-- <a href="/otpsend">Log in by OTP</a> -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function removeMessage() {
       const MessageElement = document.getElementById('message');
       if (MessageElement) {
           setTimeout(() => {
               MessageElement.style.display = 'none';
           }, 2000);
       }
   }

   window.onload = removeMessage;
</script>

