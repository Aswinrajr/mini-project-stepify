<% if(userData){ %> <%- include("./layouts/userheader.ejs") %> <% } else { %>
<%- include("./layouts/header.ejs") %> <% } %>

<div class="product_image_area">
  <div class="container">
    <div class="row s_product_inner">
      <div class="col-lg-6">
        <div class="p-5 row d-flex">
          <% proData.image.forEach(data => { %>
          <div class="col-2 single-prd-item">
            <img
              class="img-fluid"
              src="../../public/uploads/<%= data %>"
              onclick="changeImage('<%= data %>')"
              alt=""
            />
          </div>
          <% }) %>
        </div>
        <div class="single-prd-item">
          <img
            class="img-fluid"
            src="../../public/uploads/<%= proData.image[0] %>"
            id="zoom-image"
            alt=""
          />
        </div>
      </div>

      <div class="col-lg-5 offset-lg-1">
        <div class="s_product_text">
          <h3><%= proData.categoryName %></h3>
          <h2>â‚¹<%= proData.price %></h2>
          <ul class="list">
            <li>
              <a class="active" href="#"
                ><span>For</span> :<%= proData.person %></a
              >
            </li>
            <li>
              <a href="#"><span>Size</span> :<%= proData.size %></a>
            </li>
          </ul>
          <p><%= proData.description %></p>

          <div class="card_area d-flex align-items-center">
            <% if(userData) { %> <% if(existincart) { %>
            <a
              type="button"
              id="addtocart"
              class="text-light primary-btn border-0"
              href="/cart"
              >Go to Cart</a
            >
            <% } else { %>
            <a
              type="button"
              id="addtocart"
              class="text-light primary-btn border-0"
              onclick="addtocart('<%- proData._id %>')"
              >Add to Cart</a
            >
            <% } %>

            <a
              id="buynow"
              type="button"
              class="primary-btn text-light border-0"
              onclick="buyNow('<%= proData._id %>')"
              >Buy Now</a
            >
            <% } else { %>
            <a
              type="button"
              id=""
              class="text-light  primary-btn border-0"
              href="/login"
              >Login to Add to Cart</a
            >
            <a
              id="buynow"
              type="button"
              class="primary-btn text-light border-0"
              href="/login"
              >Buy Now</a
            >
            <% } %>

            <a class="icon_btn" href="#">
              <i
                class="lnr lnr lnr-heart"
                onclick='wishList("<%= proData._id %>")'
              ></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>

<script>
  $(document).ready(function () {
    $("#zoom-image").elevateZoom();
  });

  function changeImage(image) {
    const proImage = document.getElementById("zoom-image");
    proImage.src = `../../public/uploads/${image}`;
  }

  async function addtocart(proid) {
    try {
      const url = "/cart";
      const options = {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ proid }),
      };

      const res = await fetch(url, options);
      const result = await res.json();

      if (res.ok) {
        const goToCart = document.getElementById("addtocart");
        goToCart.removeAttribute("onclick");
        goToCart.innerHTML = "Go to Cart";

        Swal.fire({
          icon: "success",
          title: "Success!",
          text: "Item added to cart",
          confirmButtonText: "Go to Cart",
        }).then((result) => {
          if (result.isConfirmed) {
            goToCart.href = "/cart";
            window.location.href = goToCart.href;
          }
        });
      } else {
        if (result.error === "Not Login") {
          Swal.fire({
            icon: "warning",
            title: "Please Login",
            text: "You need to log in to add items to your cart.",
            confirmButtonText: "Login",
            showCancelButton: true,
            cancelButtonText: "Cancel",
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = "/login";
            }
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Error!",
            text: result.error || "Failed to add item to cart.",
          });
        }
      }
    } catch (error) {
      console.error("Error adding to cart:", error);
      Swal.fire({
        icon: "error",
        title: "Error!",
        text: "An unexpected error occurred.",
      });
    }
  }

  function wishList(proId) {
    console.log("Wishlist clicked")
    fetch("/wishlist", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ proId }),
    })
      .then((response) => response.json())
      .then((data) => {
        if (data.message) {
          showMessage(data.message);
        } else {
          console.log("Error:", data.error);
        }
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  }

  function showMessage(message) {
    const toast = Swal.mixin({
      toast: true,
      position: "top-end",
      showConfirmButton: false,
      timer: 3000,
    });

    toast.fire({
      icon: "success",
      title: message,
    });
  }

  async function buyNow(proid) {
    try {
      if (!<%= userData ? 'true' : 'false' %>) {
        window.location.href = "/login";
        return;
      }

      const url = "/buynow";
      const options = {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ proid }),
      };

      const res = await fetch(url, options);
      const result = await res.json();

      if (res.ok) {
        Swal.fire({
          icon: "success",
          title: "Success!",
          text: "Proceeding to checkout",
          confirmButtonText: "Proceed",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = `/checkout?id=${proid}`;
          }
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Error!",
          text: result.error || "Failed to proceed with purchase.",
        });
      }
    } catch (error) {
      console.error("Error during purchase:", error);
      Swal.fire({
        icon: "error",
        title: "Error!",
        text: "An unexpected error occurred.",
      });
    }
  }
</script>

