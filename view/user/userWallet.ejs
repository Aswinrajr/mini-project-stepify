<%- include("./layouts/userheader.ejs") %>
    <style>
        .product_image_area {
            background-color: #fff;
            border-radius: 10px;


            padding: 20px;
        }

        .s_product_inner {
            text-align: center;
        }

        .balance,
        .transactions,
        .actions {
            margin-bottom: 40px;
        }

        .balance h2,
        .transactions h2,
        .actions h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }




        form label {
            font-weight: bold;
        }

        form input[type="number"] {
            width: 20%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        form input[type="number"]::-webkit-inner-spin-button,
        form input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            appearance: none;
            margin: 0;
        }

        form button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="product_image_area mt-5">
        <div class="container">
            <div class="row s_product_inner mt-5">
                <div class="col-lg-12 ">
                    <div class="mt-5">
                        <div id="message">
                            <% if(msg) {%>

                                <div
                                    style="position: fixed; top: 150px; right: 20px; background-color: #f05f04; color: #040404; padding: 10px; border-radius: 4px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06);">
                                    <p>
                                        <%= msg %>
                                    </p>
                                </div>
                                <%}%>




                        </div>
                        <section class="balance">
                            <h2>Your Wallet Balance</h2>
                            <p style="color: #040404;">Balance:<%=amount%>
                            </p>

                        </section>

                        <section class="actions" id="wallet">
                            <h2>Wallet Actions</h2>
                            <form method="POST" action="/user-wallet">
                                <label for="depositAmount" style="color: #040404;">Deposit Amount:</label>
                                <input type="number" id="depositAmount" name="depositAmount" required>
                                <button type="submit">Deposit</button>
                            </form>


                        </section>
                        <section class="actions">
                            <h2 onclick="referal()" style="color: red;text-decoration: underline;font-size: 17px">Click to redeem referal code</h2>
                            <form method="POST" action="/redeemReferal" id="referal" style="display: none;">
                                <label for="referal" style="color: #040404;">Referal Code:</label>
                                <input type="text"  name="referal" required>
                                <button type="submit">Redeem</button>
                            </form>


                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>


        function referal() {
            const wallet = document.getElementById("wallet")
            const referal = document.getElementById("referal")
            wallet.style.display = "none"
            referal.style.display = "block"

        }
    </script>


    <%- include("./layouts/footer.ejs") %>