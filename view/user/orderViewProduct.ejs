<%- include("./layouts/userheader.ejs") %>

    <style>
       
        .order_box {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 20px 0;
        }

        .order_header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .horizontal_line {
            border: 0;
            border-top: 1px solid #ccc;
            margin: 10px 0;
        }

        .product_item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .product_item img {
            max-width: 80px;
            max-height: 80px;
            margin-right: 10px;
        }

        .product_info h5 {
            margin: 0;
        }

        .cancel_button {
            background-color: #ff0000;
            color: #fff;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .progress-bar {
            width: 100%;
            height: 20px;
            background-color: #f3f3f3;
            border-radius: 10px;
            position: relative;
        }

        .progress-status {
            position: absolute;
            height: 100%;
            border-radius: 10px;
           
            transition: width 0.3s ease-in-out;
        }
    </style>

    <section class="section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="order_box mt-5">
                        <div class="order_header">
                            <h4>Order ID: <%=data._id%>
                            </h4>
                            <p>Expected Delivery: <span style="color: #ff0000;">
                                    <%=deliveryDate%>
                                </span></p>
                        </div>
                        <hr class="horizontal_line">
                        <div class="product_details text-dark">
                            <div class="product_info">
                                <div class="product_details">
                                    <% data.items.forEach(item=> { %>
                                        <div class="product_item">
                                            <img src="../../public/uploads/<%=item.image%>" alt="Product Image">
                                            <div class="product_info">

                                                <p>Amount: <%= item.price %>
                                                </p>
                                                <p>quantity: <%= item.quantity %>
                                                </p>
                                                <p>Delivery Address: <%= data.deliveryAddress %>
                                                </p>
                                                <p>Status: <%= item.status %>
                                                </p>
                                                <div class="progress-bar">
                                                    <%if(item.status==="confirmed"){%>
                                                        <div class="progress-status" style="width: 0%;"></div>
                                                        <%}else if(item.status==="Shipped" ){%>
                                                            <div class="progress-status" style="width: 30%; background-color: #007bff;"></div>

                                                            <%}else if(item.status==="Out of Delivery" ){%>
                                                                <div class="progress-status" style="width: 80%; background-color: #c3f50c;"></div>

                                                                <%}else if(item.status==="Cancel" ){%>
                                                                    <div class="progress-status" style="width: 100%; background-color: #f83802;"></div>
                                                                    <%}else if(item.status==="Delivered"){%>
                                                                        <div class="progress-status" style="width: 100%; background-color: #05d60f;"></div> 
                                                                        <%}%>

                                                </div>




                                                <% if( item.status=="Delivered" ) {%>
                                                    <a href="/return/<%=data._id%>/<%=item.ProductId%>"
                                                        class="genric-btn danger small mt-2 text-white"
                                                        id="cancel-btn">Return</a>
                                                    <%}else if(item.status=="confirmed" || item.status=="Shipped" ){%>
                                                        <a href="/cancel/<%=data._id%>/<%= item.ProductId%>"
                                                            class="genric-btn danger small mt-2 text-dark"
                                                            id="cancel-btn">Cancel
                                                            Order</a>

                                                        <%}else{%>
                                                            <a href="#" class="genric-btn disable radius mt-2">Disable</a>

                                                            <%}%>
                                                            <a href="/invoice?id=<%= data._id %> "><span class="genric-btn info small mt-2 text-dark">Download Invoice</span></a>
                                            </div>
                                         
                                        </div>
                                        
                                        <hr class="horizontal_line">
                                        <% }); %>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include("./layouts/footer.ejs") %>